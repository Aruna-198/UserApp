<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.anveshak.repository.UserMapper">
	<resultMap type="com.anveshak.model.User" id="result">
		<id property="id" column="UID"></id>
		<result property="firstName" column="FNAME" />
		<result property="lastName" column="LNAME"></result>
		<result property="email" column="EMAIL"></result>
		<result property="password" column="PASSWORD"></result>
		<result property="mobileNumber" column="MOBILENUM"></result>
		<result property="gender" column="GENDER"></result>
		<result property="dob" column="DOB"></result>
	</resultMap>
	
	<insert id="addUser" parameterType="com.anveshak.model.User">
	insert into table_User(FNAME,LNAME,EMAIL,PASSWORD,MOBILENUM,DOB,GENDER)
	VALUES(#{firstName},#{lastName},#{email}, #{password},#{mobileNumber},#{dob},#{gender})
	</insert>
	
	<delete id="deleteUser" parameterType="com.anveshak.model.User">
	delete from table_User where email=#{email}
	</delete>
	
	<update id="updateUser" parameterType="com.anveshak.model.User">
		UPDATE table_User set FNAME=#{firstName}, 
		LNAME=#{lastName},
		EMAIL=#{email},
		PASSWORD=#{password},
		MOBILENUM=#{mobileNumber},
		gender=#{gender}, 
		DOB=#{dob}
	</update>
	
	<select id="getUser" parameterType="String" resultMap="result">
	select*from table_User where email=#{email}
	</select>
	
	<select id="getAllUsers" parameterType="com.anveshak.model.User" resultMap="result">
	select*from table_User
	</select>
	

</mapper>
	

 
